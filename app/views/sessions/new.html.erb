<h1>Login</h1>

<%= form_with :url => "/sessions" do |form| %>
  <p>
    <%= form.label "username" %>
    <%= form.text_field "username" %>
  </p>
  <p>
    <%= form.label "email" %>
    <%= form.text_field "email" %>
  </p>
  <p>
    <%= form.label "password" %>
    <%= form.password_field "password" %>
  </p>
  
  <p>
    <button class="btn btn-primary" type="submit">Login</button>
  </p>
<% end %>